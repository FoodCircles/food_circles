.filters
  %form{action: "", method: "post", class: "search"}
    %a{href: "#", class: "search-btn icon-magnifier"}
    .field-holder.ui-front
      %input{type: "text", class: "field", placeholder: "Search restaurants"}
      %a{href: "#", class: "acomplete-lnk"}
        Want a
        %strong restaurant
        added?

  .filter.location
    %h5
      Location:
      %a{href: "#"}
        GR
        %i{class: "arrow-down"}
    .dropdown
      %i{class: "arrow-up"}
        %i{class: "arrow-up"}
      %p{class: "all-results"}
        %a{href: "#"}
          All Results
          %i{class: "arrow-right"}
      .col
        %ul
          - @cities.each_pair do |city, count|
            %li
              %input{type: "checkbox", name: city, value: city, id: city}
              %label{for: city}
                = city
                %em= "(#{count})"
      .dropdown-foot
        %a{href: "#", class: "left"} Want to Add a City?
        %a{href: "#", class: "clear-all"} Clear All
        %a{href: "#", class: "cancel"} Cancel
        %a{href: "#", class: "btn-mini filter-btn"} Filter

  .filter.category
    %h5
      Category:
      %a{href:"#"}
        All
        %i{class: "arrow-down"}
    .dropdown
      %i{class: "arrow-up"}
        %i{class: "arrow-up"}
      %p{class: "all-results"}
        %a{href: "#"}
          All Results
          %i{class: "arrow-right"}
      .col.experience_tag
        %h4 Experience
        %ul
          - ExperienceTag.all.each do |tag|
            %li
              %input{type: "checkbox", name: tag.name, value: tag.name, id: tag.name}
              %label{for: tag.name}
                = tag.name
                %em= "(#{experience_tag_count(tag)})"
      .col.venue_tag
        %h4 Cuisine
        %ul
          - VenueTag.all.each do |cat|
            %li
              %input{type: "checkbox", name: cat.name, value: cat.name, id: cat.name}
              %label{for: cat.name}
                = cat.name
                %em= "(#{venue_tag_count(cat)})"
      .dropdown-foot
        %a{href: "#", class: "clear-all"} Clear All
        %a{href: "#", class: "cancel"} Cancel
        %a{href: "#", class: "btn-mini filter-btn"} Filter
 
