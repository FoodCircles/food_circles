                <input type="text" name="phone" class="field standart small-input" placeholder="Restaurant Phone">
                <input type="text" name="restaurant_address" class="field standart input" placeholder="Restaurant Address">
                <input type="text" name="restaurant_neighborhood" class="field standart shifted-input" placeholder="Restaurant Neighborhood">
                <br>
                <input type="text" name="website" class="field standart small-input" placeholder="Website">
                <input type="text" name="facebook" class="field standart small-input" placeholder="Facebook">
