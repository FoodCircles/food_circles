/ = render :partial => 'partials/header'
.container
  .tight-wrapper
    %h2 Sign up
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %div
        = f.label :email
        %br= f.email_field :email, class: 'field standart'
      %div
        = f.label :password
        %br= f.password_field :password, class: 'field standart'
      %div
        = f.label :password_confirmation
        %br= f.password_field :password_confirmation, class: 'field standart'
      %div= f.submit "Sign up", class: 'btn-standart full-width'
