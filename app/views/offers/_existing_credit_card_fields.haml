.cards
  %span{:class => credit_card_class_map}
%h5
  Payment Details
  %span.line
.card-number
  %label Card number
  %span.field-holder
    %input#card-number.field.standart{:type => "text", :tabindex => '4', :disabled => true, :value => "**** **** **** #{current_user_credit_card_data.last4}"}/
    %i.suffix.icon-lock
/ /.card-number
.valid-thru
  %label EXPIRY DATE
  %input#exp-month.field.standart.thin{:type => "text", :tabindex => '5', :disabled => true, :value => current_user_credit_card_data.exp_month}/
  %input#exp-year.field.standart.thin{:type => "text", :tabindex => '6', :disabled => true, :value => current_user_credit_card_data.exp_year.to_s.last(2)}/
/ /.valid-thru
