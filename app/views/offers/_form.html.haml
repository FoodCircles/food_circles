= form_for @offer, :html => { :multipart => true } do |f|
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :venue
    = collection_select(:offer, :venue_id, Venue.all, :id, :name)
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :category
    = f.select(:category_ids, Category.all.collect { |o| [o.name, o.id] }, {}, { :multiple => true, :size => 5 } )
  .field
    = f.submit
