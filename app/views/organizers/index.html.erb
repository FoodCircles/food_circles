    <div class="container">
        <h2>Create an Event</h2>
        
        <div class="placard alpha">
                <h1>a simple 3 step guide to creating an event</h1>

            <div class="steps">
                <div class="step1">
                   <%= image_tag "mealupgrade.png" %>
